# Directory where the final session notes will be saved
OUTPUT_DIR=./output

# Directory for temporary files (e.g., audio chunks, intermediate transcriptions)
TEMP_DIR=./temp

# Directory from where source audio and chat logs are stored
DOWNLOADS_DIR=./downloads

# Path to the JSON file mapping Discord usernames to character names
DISCORD_MAPPING_FILE=./discord_speaker_mapping.json

# Path to the text file containing the initial prompt for Whisper transcription
WHISPER_PROMPT_FILE=./prompts/whisper.txt

# Path to the text file containing the system prompt for generating the session summary
SUMMARY_PROMPT_FILE=./prompts/summary.txt

# Path to the text file containing the system prompt for extracting details from the summary
DETAILS_PROMPT_FILE=./prompts/details.txt

# Path to the Markdown template file for the final session notes
TEMPLATE_FILE=./template.md

# Your Google Gemini API key
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"

# Set to "true" to delete the TEMP_DIR after the script finishes
DELETE_TEMP_FILES=false

# Directory containing context files (e.g., previous session notes) for the AI model
CONTEXT_DIR=./context

# The name of the Gemini model to use (e.g., "gemini-2.5-pro")
GEMINI_MODEL_NAME="gemini-2.5-pro"
